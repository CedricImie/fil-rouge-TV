{% extends 'base.html.twig' %}

{% block title %}TalkSeries{% endblock %}
{% block body %}

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <div class="btnNewSerie">
        <a href="{{ path('series_index') }}" class="btn btn-default">Retour à la liste des séries</a>
    </div>

    <div class="H1NewSerie">
        <h1>Nouvelle série</h1>
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}
{% else %}
    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <a href="{{ path('fos_user_security_login') }}" class="btn btn-info btn-lg" style="display: block; width: 100%;">Vous devez vous identifier</a>
        </div>
    </div>
{% endif %}

{% endblock %}
