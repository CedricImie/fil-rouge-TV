{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activites</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Dateactivite</th>
                <td>{% if activite.dateActivite %}{{ activite.dateActivite|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activites_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('activites_edit', { 'id': activite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
