                <td>{{ user.photoProfilUtilisateur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'username': user.username }) }}">show</a>
                        </li>
                        {% if pseudo == user.username %}
                        <li>
                            <a href="{{ path('user_edit', { 'username': user.username }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
