{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudoutilisateur</th>
                <!-- <th>Prenomutilisateur</th>
